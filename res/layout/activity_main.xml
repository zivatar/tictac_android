<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_toRightOf="@+id/btnAdd"
        android:onClick="onClick_reset"
        android:text="Reset" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/txtValue"
        android:text="+1" />

    <Button
        android:id="@+id/btnTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="32dp"
        android:onClick="onClick_step"
        android:text="" />

    <Button
        android:id="@+id/btnCenterLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnTopLeft"
        android:layout_below="@+id/btnTopLeft"
        android:layout_marginTop="15dp"
        android:text="Button" />

    <Button
        android:id="@+id/btnCenterCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCenterLeft"
        android:layout_alignBottom="@+id/btnCenterLeft"
        android:layout_alignLeft="@+id/btnTopCenter"
        android:text="Button" />

    <Button
        android:id="@+id/btnCenterRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCenterCenter"
        android:layout_alignBottom="@+id/btnCenterCenter"
        android:layout_alignLeft="@+id/btnTopRight"
        android:text="Button" />

    <Button
        android:id="@+id/btnBottomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCenterLeft"
        android:layout_below="@+id/btnCenterLeft"
        android:layout_marginTop="21dp"
        android:text="Button" />

    <Button
        android:id="@+id/btnBottomCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnBottomLeft"
        android:layout_alignBottom="@+id/btnBottomLeft"
        android:layout_alignLeft="@+id/btnCenterCenter"
        android:text="Button" />

    <Button
        android:id="@+id/btnBottomRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnBottomCenter"
        android:layout_alignBottom="@+id/btnBottomCenter"
        android:layout_toRightOf="@+id/btnBottomCenter"
        android:text="Button" />

    <Button
        android:id="@+id/btnTopCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCenterLeft"
        android:layout_centerHorizontal="true"
        android:text="Button" />

    <Button
        android:id="@+id/btnTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCenterLeft"
        android:layout_alignLeft="@+id/btnBottomRight"
        android:text="Button" />

    <TextView
        android:id="@+id/txtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_alignRight="@+id/btnBottomLeft"
        android:layout_marginRight="16dp"
        android:text="0 : 0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>